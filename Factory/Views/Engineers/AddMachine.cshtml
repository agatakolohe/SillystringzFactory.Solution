@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="jumbotron">
    <h1>Assign Machine</h1>
</div>

<h2>Add A Machine for: @Html.DisplayFor(model => model.EngineerName)</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.EngineerId)
    <h3>Current Machines: @Html.DropDownList("MachineId") </h3>
    <input type="submit" value="Save" class="btn btn-warning" />
}

<hr />
<h4>@Html.ActionLink("Engineer List", "Index")</h4>
<h4>@Html.ActionLink("Machine List", "Index", "Machines")</h4>
<h4>@Html.ActionLink("Home Page", "Index", "Home")</h4>