@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="jumbotron">
    <h1>Edit Engineer Details</h1>
</div>
<div class="engineStyle">
    <h2>Engineer: @Html.DisplayFor(model => model.EngineerName)</h2>
</div>
<hr style="width:80%" />
<div class="engineStyle">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.EngineerId)

        <h3>Engineer Name: @Html.EditorFor(model => model.EngineerName)</h3>
        <h3>Engineer Status:</h3>
        <h4>@Html.RadioButtonFor(model => model.EngineerStatus, "Idle") Idle</h4>
        <h4>@Html.RadioButtonFor(model => model.EngineerStatus, "Active") Active</h4>
        <h3>@Html.Label("Machines") @Html.DropDownList("MachineId")</h3>

        <input type="submit" value="Save" class="btn btn-success" />
    }
</div>
<hr style="width:80%" />
<div class="links">
    <h3>Navigation Links</h3>
    <hr style="width:80%" />
    <h4>@Html.ActionLink("Engineer List", "Index")</h4>
    <h4>@Html.ActionLink("Home Page", "Index", "Home")</h4>
</div>