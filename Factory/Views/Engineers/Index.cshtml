@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<div class="jumbotron">
    <h1>Engineers</h1>
    <h2>Click On An Engineer's Name For Details.</h2>
</div>
<div class="engineStyle">


    @if (@Model.Count == 0)
    {
        <h2>There are currently no engineers listed.</h2>
    }

    <ul>
        @foreach (Engineer engineer in Model)
        {
            <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
        }
    </ul>
</div>
<hr style="width:80%" />
<div class="links">
    <h3>Navigation Links</h3>
    <hr style="width:80%" />
    <h4>@Html.ActionLink("Add New Engineer", "Create")</h4>
    <h4>@Html.ActionLink("Home Page", "Index", "Home")</h4>
</div>