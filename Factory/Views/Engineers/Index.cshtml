@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<div class="jumbotron">
    <h1>Engineers</h1>
</div>
<h2>Click on a engineer's name to view their details.</h2>
<hr />

@if (@Model.Count == 0)
{
    <h2>There are currently no engineers listed.</h2>
}

<ul>
    @foreach (Engineer engineer in Model)
    {
        <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
    }
</ul>
<hr />
<h3>@Html.ActionLink("Add a New Engineer", "Create")</h3>
<h3>@Html.ActionLink("Home Page", "Index", "Home")</h3>