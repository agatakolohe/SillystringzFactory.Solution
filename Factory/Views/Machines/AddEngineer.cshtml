@{
    Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="jumbotron">
    <h1>Assign An Engineer</h1>
</div>

<h2>Add an engineer to: @Html.DisplayFor(model => model.MachineName)</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)
    <h3>@Html.Label("Engineers") @Html.DropDownList("EngineerId")</h3>
    <input type="submit" value="Save" class="btn btn-warning" />
}

<hr />
<h4>@Html.ActionLink("Machine List", "Index")</h4>
<h4>@Html.ActionLink("Engineer List", "Index", "Engineers")</h4>
<h4>@Html.ActionLink("Home Page", "Index", "Home")</h4>