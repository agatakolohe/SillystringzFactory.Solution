@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<div class="jumbotron">
    <h1>Machines</h1>
</div>
<h2>Click on a machine name to see their details.</h2>
<hr />

@if (@Model.Count == 0)
{
    <h2>There are currently no machines listed.</h2>
}

<ul>
    @foreach (Machine machine in Model)
    {
        <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
    }
</ul>

<h3>@Html.ActionLink("Add a New Machine", "Create")</h3>
<h3>@Html.ActionLink("Home Page", "Index", "Home")</h3>