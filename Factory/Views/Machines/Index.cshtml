@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<div class="jumbotron">
    <h1>Current Machines</h1>
    <h2>Click On A Machine Name For Details</h2>
</div>

<hr style="width:80%" />
<div class="machineStyle">
    @if (@Model.Count == 0)
    {
        <h2 class="none">There are currently no machines listed.</h2>
    }

    <ul>
        @foreach (Machine machine in Model)
        {
            <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
        }
    </ul>
</div>
<hr style="width:80%" />
<div class="links">
    <h3>Navigation Links</h3>
    <hr style="width:80%" />
    <h4>@Html.ActionLink("Add New Machine", "Create")</h4>
    <h4>@Html.ActionLink("Home Page", "Index", "Home")</h4>
</div>